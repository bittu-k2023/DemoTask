<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e5e5e5"
    android:layout_margin = "5dp">
    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="UselessParent">
        <LinearLayout
            android:id="@+id/imageSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1.0">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/icon_container"
                android:src="@mipmap/ic_launcher"/>
            <TableLayout
                android:layout_weight="0.2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sourceDestination"
                android:weightSum="1.0">

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:weightSum="1.0">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Venue Id"
                        android:layout_weight="0.5"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="italic|bold"/>
                    <TextView
                        android:id="@+id/venueId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:ems="12"
                        android:singleLine="true"
                        android:layout_weight="0.5"/>
                </TableRow>
                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:weightSum="1.0">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Venture Id"
                        android:layout_weight="0.5"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="italic|bold"/>
                    <TextView
                        android:id="@+id/ventrueId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:ems = "12"
                        android:singleLine="true"
                        android:layout_weight="0.5"/>
                </TableRow>
                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:weightSum="1.0">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_weight="0.5"
                        android:textStyle="italic|bold"/>
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:layout_weight="0.5"
                        android:ems = "12"
                        android:singleLine="true" />
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category Id"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_weight="0.5"
                        android:textStyle="italic|bold"/>
                    <TextView
                        android:id="@+id/categroyId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:layout_weight="0.5"
                        android:ems = "12"
                        android:singleLine="true" />
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category Name"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_weight="0.5"
                        android:textStyle="italic|bold"/>
                    <TextView
                        android:id="@+id/categroyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:layout_weight="0.5"
                        android:ems = "12"
                        android:singleLine="true" />
                </TableRow>
                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category Description"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_weight="0.5"
                        android:textStyle="italic|bold"/>
                    <TextView
                        android:id="@+id/categroyDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:layout_weight="0.5"
                        android:ems = "12"
                        android:singleLine="true" />
                </TableRow>
                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Truf Id"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_weight="0.5"
                        android:textStyle="italic|bold"/>
                    <TextView
                        android:id="@+id/trufId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:layout_weight="0.5"
                        android:ems = "12"
                        android:singleLine="true" />
                </TableRow>
                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Truf Name"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_weight="0.5"
                        android:textStyle="italic|bold"/>
                    <TextView
                        android:id="@+id/trufName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:layout_weight="0.5"
                        android:ems = "12"
                        android:singleLine="true" />
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Truf Category Id"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_weight="0.5"
                        android:textStyle="italic|bold"/>
                    <TextView
                        android:id="@+id/trufCategoryId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:layout_weight="0.5"
                        android:ems = "12"
                        android:singleLine="true" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>